<div class='col-md-8 offset-md-1'>
    <h2>顧客一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
     <% @customer.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <%= customer.is_active ? "有効" : "無効" %>
        </td>
      </tr>
     <% end %>
    </tbody>
  </table>
  </div>