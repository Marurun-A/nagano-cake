<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>登録情報編集</h4>

      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

        <div class="form-grop mt-3">
          <h6>会員ID</h6>
          <%= @customer.id %>
        </div>

        <div class="field">
    <h6>名前</h6>
    <%= f.label :"（性）" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
    <br/><%= f.label :"（名）" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <h6>フリガナ</h6>
    <%= f.label :"（セイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
    <br/><%= f.label :"（メイ） "%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <h6>郵便番号（ハイフンなし）</h6>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <h6>住所</h6>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <h6>電話番号（ハイフンなし）</h6>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  
  <div class="field">
    <h6>メールアドレス</h6>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


        <div class="form-grop mt-3">
          <%= f.submit '更新', class: "btn btn-secondary" %>
        </div>
      <% end %>




    </div>
  </div>
</div>
