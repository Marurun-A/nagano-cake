<h4>会員詳細</h4>

  <table class='table'>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>フリガナ</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>電話番号</th>
        <th>メールアドレス</th>
        <th>会員ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% customer = @customers %>
        <tr>
          <td>
          <%= customer.id %>
          </td>
          <td>
          <%= customer.full_name %>
          </td>
          <td>
          <%= customer.full_name_kana %>
          </td>
          <td>
          <%= customer.postal_code %>
          </td>
          <td>
          <%= customer.address %>
          </td>
          <td>
          <%= customer.telephone_number %>
          </td>
          <td>
          <%= customer.email %>
          </td>
          <td>
            <%= customer.is_active ? "有効" : "無効" %>
          </td>
        </tr
    </tbody>
  </table>


  <div>
    <h5>登録情報</h5>
    <%= link_to "編集する", edit_admin_customer_path %>
  </div>
  <div>
    <h5>注文履歴</h5>
    <%= link_to "一覧を見る", public_orders_path %>
  </div>

