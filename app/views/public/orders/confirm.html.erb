<h4>注文情報確認</h4><tr>
 <table>
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </thead>
    <tbody>
      <% @total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.get_image, size: "100x100" %></td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
        <% @total += cart_item.subtotal %>
      <% end %>
    </tbody>
  </table>

<table>
     <tr>
       <th>送料</th>
        <% @order.postage = 800 %>
       <td><%= @order.postage %></td>
      </tr>
     <tr>
       <th>商品合計</th>
       <td><%= @total %>円</td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.postage + @total %>
        <td><%= @order.postage + @total %></td>
      </tr>
</table>

<%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
   
   <%= f.hidden_field :postal_code, :value =>  @order.postal_code %>
   <%= f.hidden_field :payment_method, :value => @order.payment_method %>
   <%= f.hidden_field :delivery_name, :value => @order.delivery_name %>
   <%= f.hidden_field :address, :value => @order.address %>
   <%= f.hidden_field :postage, :value => @order.postage %>
   <%= f.hidden_field :billing_amount, :value =>  @order.postage + @total %>

  <%= f.submit "注文を確定する", class: "btn btn-success" %>
 <% end %>


