<h2>注文履歴</h2>

  <table>
    <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </thead>
    <tbody>
      <% @total = 0 %>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at.strftime("%Y/%m/%d") %>
          </td>
          <td>
            〒<%= order.postal_code %>
              <%= order.address %><br>
              <%= order.name %>
          </td>
          <td><%= order.order_details.first.item.name %></td>
          <td><%= order.billing_amount %></td>
          <td><%= link_to "表示する", public_order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
