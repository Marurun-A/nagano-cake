<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

　<tbody>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= link_to public_item_path(item.id) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        <% end %>
      </td>
      <td><%= item.name %></td>
      <td><%= item.with_tax_price %></td>

    </tr>
  <% end %>
  </tbody>
</table>